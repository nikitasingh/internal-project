<br/><br/><center><h1>Listing roles</h1></center>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><% if can? :update, @user %><%= link_to 'Show', role %><% end %></td>
    <td><% if can? :update, @user %><%= link_to 'Edit', edit_role_path(role) %><% end %></td>
    <td><% if can? :update, @user %><%= link_to 'Destroy', role, confirm: 'Are you sure?', method: :delete %><% end %></td>
  </tr>
<% end %>
</table>

